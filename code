#include <SFML/Graphics.hpp>
#include <cmath>
#include <iostream>
#include <iostream>
#include <sstream>

using namespace sf;

class Planet
{
public:
	Texture texture;
	Sprite sprite;
	double x = 0;
	double y = 0;
	double a = 0.001;
	double dx = 0;
	Planet(Image& image, double radius, double orbit, double centerx, double centery)
	{
		this->centerx = centerx;
		this->centery = centery;
		this->radius = radius;
		this->orbit = orbit;
		texture.loadFromImage(image);
		sprite.setTexture(texture);
		

	}
	void update()
	{
		x = orbit * cos(dx)+centerx;
		y = orbit * sin(dx)+centery;
		sprite.setPosition(x, y);
		dx += a;
	}
protected:
	double radius;
	double orbit;
	double centerx;
	double centery;
};

int main()
{
	RenderWindow window(VideoMode(1920, 1200), "Solar System");
	//RenderWindow window(sf::VideoMode(), "app.exe", sf::Style::Fullscreen);
	sf::View view = window.getDefaultView();
	sf::Vector2f center = view.getCenter();
	
	Image eImage;
	eImage.loadFromFile("earth_PNG17.png");
	Planet earth(eImage, 200.0, 250.0, center.x,center.y);
	Planet sun(eImage, 200.0, 0,center.x,center.y);
	
	while (window.isOpen())
	{
		Event event;
		while (window.pollEvent(event))
		{
			if (event.type == sf::Event::Closed)
				window.close();
		}
		earth.update();
		sun.update();
		window.clear();
		window.draw(earth.sprite);
		window.draw(sun.sprite);
		window.display();
	}

	return 0;
}
